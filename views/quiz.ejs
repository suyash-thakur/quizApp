<%- include("./partials/header.ejs") %>
<div class="quiz-section">
    <div class="quiz-content">
        <div class="imageContainer col-lg-6 col-xs-12 col-md-6">
            <img src="/assets/reading.png" class="quiz-image">
        </div>
        <div class="imageContainer col-lg-6 col-xs-12 col-md-6">
            <h1 class="second-header"> Quiz Me</h1>
            <select class="quiz-input" id="arithmetic">
                <option disabled selected>Select Operation</option>
                <option value="subAndAdd">Addition/Subtraction</option>
                <option value="mulAndDiv">Multiplication/Division</option>
            </select>
            <select id="questionType" placeholder="Mode" class="quiz-input">
                <option disabled selected>Select Digits</option>
                <option value="one">Single Digit</option>
                <option value="two">Double Digit</option>
                <option value="three">Triple Digit</option>
                <option value="onetwo">Mix Digits (1 + 2)</option>
            </select>
            <select id="questionRows" placeholder="Rows" class="quiz-input" onchange="time(this.value)">
                <option disabled selected>Select Rows</option>
                <option value="5">Five</option>
                <option value="10">Ten</option>
                <option value="15">Fifteen</option>
                <option value="20">Twenty</option>
            </select>
            <div id="container">

            </div>
            <br>
            <a class="btn btn-warning btn-btn" onclick="onInput()">Start</a>
        </div>
    </div>
</div>
<%- include("./partials/footer.ejs") %>
</body>

</html>